<%- include('../partials/blank_header.ejs') %>
<form class="form-signin" action="/login/access" method="post">
  <h1 class="h3 mb-3 font-weight-normal">REGISTER</h1>
  <input type="hidden" name="key" value="value">
  <span class="extraData"></span>
  <!--USER -->
  <label for="user" class="sr-only">User</label>
  <input type="text" id="user" class="form-control" placeholder="Usuario" required="" autofocus="" name="user">
  <!--CORREO-->
  <h1 class="h3 mb-3 font-weight-normal">CORREO</h1>
  <!--EMAIL -->
  <label for="correo" class="sr-only">Correo</label>
  <input type="text" id="user" class="form-control" placeholder="Correo" required="" autofocus="" name="user">
  <!--CSRF -->
  <input type="hidden" name="<%= constants.csrf.key %>" value="<%= constants.csrf.secret %>">

  <h1 class="h3 mb-3 font-weight-normal">PASSWORD</h1>

  <!--PASS -->
  <label for="inputPassword" class="sr-only">Password</label>
  <input type="password" id="inputPassword" class="form-control" placeholder="Contraseña" required="" name="password">
  <!--RE-PASS -->
  <label for="inputPassword" class="sr-only">Verifique el Password</label>
  <input type="password" id="inputPassword" class="form-control" placeholder="Verifique su contraseña" required="" name="password">
  <!--MESSAGE-->
  <p class="<%= message_color %> message" style="margin-top:10px;" id="login-message"><%= message %></p>
  <!--BUTTON -->
  <button class="btn btn-lg btn-primary btn-block" type="submit">
    Ingresar
  </button>
  <!--FooTER LOGIN NAV -->
  <div class="link-login">
    <a class="" href="/login/signac_in">
      Registrarse
    </a>
    <a id="forgotpassword" class="pull-right" href="/login/reset_password">
      Olvidó su Contraseña
    </a>
  </div>
  <p class="mt-5 mb-3 text-muted">Powered By <a href="http://softweb.pe/"> Softtware Web Perú</a> © 2017-2018</p>
</form>
<%- include('../partials/blank_footer.ejs') %>